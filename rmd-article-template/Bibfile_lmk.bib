@Article{王积超2019,
  author        = {王积超 and 闫威},
  title         = {相对收入水平与城市居民获得感研究},
  journal       = {中央财经大学学报},
  year          = {2019},
  number        = {10},
  pages         = {119--128},
  __markedentry = {[Administrator:6]},
  abstract      = {自2015年习近平总书记首次提出改革要"让人民群众有更多获得感"以来,获得感研究日益受到学术界的重视,其中对收入与获得感之间关系的考察是这些研究中备受关注的领域。笔者利用CGSS 2015的数据,应用社会比较理论和期望值理论为研究视角,在控制了绝对收入的前提下,研究城市居民的相对收入水平与获得感的关系。研究发现,社会比较因素和自我期望因素能显著影响城市居民的获得感。当个体收入水平低于同龄群体或自己的过去时,他们的获得感就会下降。当个体在综合考虑自身能力后认为自己的收入水平没有达到自己的预期时,他们的获得感也将随之降低。},
  keywords      = {获得感;;相对收入水平;;绝对收入;;社会比较;;自我期望},
}

@Article{邵雅利2019,
  author        = {邵雅利},
  title         = {新时代人民主观获得感的指标构建与影响因素分析},
  journal       = {新疆社会科学},
  year          = {2019},
  number        = {04},
  pages         = {139--147},
  __markedentry = {[Administrator:6]},
  abstract      = {人民主观获得感是指广大人民群众对我国改革开放发展成果的认知评价、情感认同和需求满足等方面的正向感受。构建一套科学的获得感评价体系,对于提升人民主观获得感的路径探索具有重要意义。文章运用嵌套回归分析,检验影响主观获得感提升的个人特征、微观心理和宏观社会发展的三个理论假设模型。结果发现:广大人民群众对我国改革开放成果的感知仍有待提升;在获得感五个因子中,人民群众对城市文化和社会民生两个维度指标的获得感较高,而对人居环境维度上的获得感偏低;在影响因素中,宏观社会发展变量对主观获得感的影响最大,其次为微观心理变量的影响,最后是个人特征变量。因此,各级政府应以人民为中心,树立服务意识,大力推进民生建设,让人民群众在已有的客观获得基础上体验更多的主观获得感。},
  keywords      = {人民主观获得感;;心理比较倾向;;结构方程},
}

@Article{上海财经大学课题组2019,
  author        = {上海财经大学课题组 and 徐国祥 and 张正 and 苏杰},
  title         = {上海高品质生活评价指标体系研究},
  journal       = {统计科学与实践},
