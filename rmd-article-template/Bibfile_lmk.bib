  keywords      = {高品质生活;习近平总书记;上海市;安全感;高质量发展;幸福感;指标体系研究;},
}

@Article{刘星2019,
  author        = {刘星},
  title         = {获得感的内涵与评价指标体系构建},
  journal       = {老区建设},
