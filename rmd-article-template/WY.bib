  abstract      = {<正>"知识付费"的概念,自2015年来随"在行"A PP诞生、罗辑思维火爆之后在我国走向流行,成为媒体眼中又一个互联网"风口"、互联网免费模式后新的发展模式。知识付费关系到终身学习与人的全面发展问题,相应的知识付费产业也已成为一个百亿级的产业,两者包含巨大的研究价值。本文首先将当前知识付费概念更为严格地界定为互联网知识付费;在此基础上梳理已有研究文献,发现互联网知识付费在产业层面的研究成},
  keywords      = {知识付费;消费者;知识付费产品;产业发展现状;},
}

@Article{李炜娜2018,
  author        = {李炜娜},
  title         = {探析互联网知识经济的传播特点及提升路径},
  journal       = {新闻研究导刊},
  year          = {2018},
  volume        = {9},
  number        = {03},
  pages         = {68+72},
  __markedentry = {[Wangy:6]},
  abstract      = {面对2017年对"知识付费"的热议,互联网知识经济掀起了当下知识分享模式的新浪潮,知识付费的春天揭开序幕。本文通过代表性APP,深入剖析当下网络付费资源的传播特点及其面对的革新与挑战。},
  keywords      = {互联网知识经济;传播特点;付费知识平台},
}

