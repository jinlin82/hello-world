@Article{王时光2019,
  author        = {王时光},
  title         = {知识付费商业模式和发展趋势浅析},
  journal       = {新媒体研究},
  year          = {2019},
  volume        = {5},
  number        = {17},
  pages         = {90--91},
  __markedentry = {[Wangy:6]},
  abstract      = {随着互联网成熟发展,无线网络普及率迅速提升、移动支付方式发展成熟,互联网平台通过技术产品的革新,运营手段的创新等催生了媒体、内容和教育的融合,边界的打破又进而使得互联网知识付费平台得以快速发展。},
  keywords      = {知识付费;互联网知识经济},
}

@Article{赵静宜2019,
  author        = {赵静宜 and 程明},
  title         = {从共享化到秩序化:网络知识付费现象的知识经济学分析},
  journal       = {编辑之友},
  year          = {2019},
  number        = {08},
  pages         = {60--65},
  __markedentry = {[Wangy:6]},
  abstract      = {现有关于网络知识付费的研究往往着眼于其共享化的市场表象,主要研究该现象出现的社会动因与产生的重要影响。而知识经济学旨在分析其秩序化的可能性,深入探讨网络知识付费市场中的知识特征、知识交易与知识定价问题。本文认为网络知识付费现象的实质是借助市场和技术的力量促进个体知识的协调与社会知识的创新。在知识经济学的理论框架下,网络知识付费现象的知识特征表现为显性知识的便捷获得、隐性知识的充分挖掘以及不同类型知识的自由流通;知识交易的生产主体与消费主体呈现个体化趋势,出现了创新型的市场化知识交易平台;知识定价系统存在乱象且需要传统公共服务机制、企业机制与市场机制共同合作以解决潜在问题。},
  keywords      = {网络知识付费;知识经济学;共享经济;知识定价},
}

@Article{漆美玲2019,
  author        = {漆美玲},
  title         = {社群经济下的知识付费现状及发展趋势研究},
  journal       = {新闻知识},
  year          = {2019},
  number        = {06},
  pages         = {32--35},
  __markedentry = {[Wangy:6]},
  abstract      = {随着知识版权意识在移动互联网飞速发展的背景下的逐步完善,近两年来知识付费逐步被人们所接受,更有越来越流行的趋势,而知识付费的兴起与社群经济发展有着密切的关联,本文将以社群经济视角,对近年来知识付费的现状以及发展趋势进行整理与研究,发现知识付费的研究热点及不足,以及对后期的研究趋势提出自己的见解。本文研究的创新点就在于将知识付费置于社群经济的角度进行思考,并针对性地根据知识付费市场现状提出其后期发展的改进建议。},
  keywords      = {社群经济;知识付费},
}

@Article{何亮莉2018,
  author        = {何亮莉},
  title         = {垂直性领域知识付费APP的传播策略——以“得到”APP为例},
  journal       = {新闻研究导刊},
  year          = {2018},
  volume        = {9},
  number        = {22},
  pages         = {207--208},
  __markedentry = {[Wangy:6]},
  abstract      = {在知识盈余和消费升级的大环境下,移动端内容及移动支付的普及、打赏制度的出现和自媒体的发展使知识付费模式成为可能。目前,知识付费APP形成以"分答""知乎""得到""喜马拉雅FM"四大APP为主要类型的格局。本文从内容、用户、平台三个维度分析了垂直性知识付费平台在内容生产上依托名人效应搭建多元纵深的知识体系;在用户方面,以个体为节点构建平台传播;在平台方面,构建开放式内容传播。并探讨了垂直性领域知识付费平台现存的问题,如碎片化阅读不利于知识的系统学习、内容筛选机制欠缺、版权保护缺失等。},
  keywords      = {垂直性领域;知识付费APP;传播策略},
}

@Article{冯红霞2018,
  author        = {冯红霞},
  title         = {共享经济时代知识付费的收费模式与盈利模式},
  journal       = {传媒},
  year          = {2018},
  number        = {12},
  pages         = {70--72},
  __markedentry = {[Wangy:6]},
  abstract      = {在互联网技术推动下共享经济兴起,知识付费在移动互联网、移动支付和付费理念发展中得以成熟。当前,知识付费分为知识下载、专栏收费、直播打赏、问答收费等模式。从盈利模式看,又可以分为内容收费、收费分成、项目佣金、会员费、广告费、线下服务收费等。但是,知识付费仍然面临着盈利模式不明确、单一且成本较高的问题,需要进一步探索与突破。},
  keywords      = {共享经济;知识付费;收费模式;盈利模式},
}

@Article{张远帆2018,
  author        = {张远帆},
  title         = {从知识服务的视角看传媒、出版和教育的融合——以得到“薛兆丰的经济学课”为例},
  journal       = {出版广角},
  year          = {2018},
  number        = {07},
  pages         = {28--30},
  __markedentry = {[Wangy:6]},
  abstract      = {近年来,基于互联网的付费知识服务在中国兴起,如何理解知识服务颇具原创性的商业模式和产品形态,成为重要的课题。文章通过分析付费订阅专栏"薛兆丰的经济学课",思考这款产品的传播逻辑、商业逻辑和产品逻辑,试图揭示优质知识付费产品的必备要素,并进一步厘清知识服务兴起背景下,传媒、出版和教育的深度融合趋势。},
  keywords      = {知识服务;付费知识产品;“薛兆丰的经济学课”},
}

@Article{叶宗乐2018,
